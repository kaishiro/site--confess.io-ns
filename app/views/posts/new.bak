.body
  .form.form--post data-verb=""
    = form_for :post, url: posts_path do |f|
      .form__triangle
      = f.hidden_field :verb, :class => "form__verb"
      = f.text_area :body, :class => "form__body"
      //= f.file_field :image
      = f.submit "Post", :class=> "form__submit"
  .posts
    - for post in @posts do
      = post.body 
      | <br />
